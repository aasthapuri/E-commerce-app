<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pinku"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:id="@+id/slogancaegory"
        android:text="@string/add_new_product"
        android:textStyle="italic|bold"
        android:textSize="25sp"
        android:textColor="@color/blacko"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"

        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/flowers"
        android:layout_marginTop="70dp"
        android:layout_marginStart="5dp"
        android:layout_below="@id/slogancaegory"
        android:src="@drawable/flowers"
        android:contentDescription="@string/todo" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:id="@+id/mandala"
        android:layout_below="@+id/slogancaegory"
        android:layout_marginStart="180dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/mandala"
        android:contentDescription="@string/todo" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/nature"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/flowers"
        android:src="@drawable/nature"
        android:contentDescription="@string/todo" />

    <ImageView
        android:id="@+id/wings"
        android:layout_width="221dp"
        android:layout_height="143dp"
        android:layout_below="@+id/mandala"
        android:layout_marginStart="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@drawable/wings"
        android:contentDescription="@string/todo" />


</RelativeLayout>